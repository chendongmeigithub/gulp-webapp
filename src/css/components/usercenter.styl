    .about-us-Copyright
        width 100%
        position absolute
        bottom m(10)
        font-size m(10)
//生活轨迹life-orbit
.life-orbit
    overflow auto
    .life-orbit-notice
        font-size m(15)
        color #000000
        margin-left m(20)
        padding m(20) m(10) 0 m(17)
        border-left 1px solid #DDDDDD
        text-align left
        position relative
        &:before
            display block
            position absolute
            content ''
            width m(10)
            height m(10)
            background img('life-ordit1.png') no-repeat
            background-size 100%
            left m(-5)
            top m(25)
