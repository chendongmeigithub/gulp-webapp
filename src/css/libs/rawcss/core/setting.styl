/* ==========================================================================
   Setting
   ========================================================================== */

/**
 * 基础单位，通常为px, 或rem
 */
base-unit = 'px'

//兼容ie
support-old-ie = true

// font
base-font-family = 'Sum Song', 'Microsoft Yahei','Helvetica Neue', Arial, sans-serif
base-font-size = 75%


// color
default-dark  = #3
default-gray  = #6
default-light = #e
default-bg    = #ea
text-color    = #3
border-color  = #c

// radius
default-radius = m(5)


//z-index layer
z-index-offset   = 1000
bottom-z-index   = z-index-offset
middle-z-index   = z-index-offset * 2
top-z-inex       = z-index-offset * 3

//prefix
prefix = 'raw-';

//size level
ty = 'ty'
sm = 'sm'
md = 'md'
lg = 'lg'
xl = 'xl'
